<h1>Song Listing</h1>
<table>
<tr>
<th>Image</th>
<th>Name</th>
<th>Artist</th>
<th>Album</th>
<th></th>
</tr>	
<% @songs.each do |song| %>
<tr>
<td><%= image_tag song.image %></td>
<td><%= song.name %></td>
<td><%= song.artist %></td>
<td><%= song.album %></td>
<td><%= form_for :item, :url => {:action => :show} do |form| %>
<%= form.hidden_field :id, :value => song.id  %>
<p><%= submit_tag "Show" %></p>
<% end %>
</td> 
</tr>
<% end %>
</table>

<p><%= link_to 'Back', home_page_index_path %></p>

